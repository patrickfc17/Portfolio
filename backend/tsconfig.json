{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "typeRoots": ["./global.d.ts", "./node_modules/@types"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["./node_modules"]
}
